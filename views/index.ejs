<%- include("partials/header.ejs") %>
<main class="container-fluid bg-dark-subtle d-flex align-items-center justify-content-center">
  <ul class="row column-gap-2 d-flex justify-content-evenly px-0">
    <% let i = 0 %>
    <% blogsToShow.forEach(blogIndex => { %>
      <li class="card col-3">
        <div class="card-body d-flex flex-column justify-content-between">
          <h4 class="card-title d-flex justify-content-center"><%= keys[blogIndex] %></h4>
          <p class="card-text text-secondary"><%= blogsDemo[i] %></p>
          <% i++; %>
          <a href="/showBlog/<%= blogIndex %>" class="btn btn-dark d-flex justify-content-center">
            Click to read
          </a>
        </div>
      </li>
    <% }); %>
  </ul>
</main>
<%- include("partials/footer.ejs") %>
